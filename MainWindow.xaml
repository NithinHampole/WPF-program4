<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Background="AliceBlue">
        <Label HorizontalAlignment="Center" FontSize="25" Margin="10">Enter your Order Name</Label>
        <TextBox HorizontalAlignment="Center" FontSize="20" Margin="10,10" Width="400" Height="50" Name="nithin"></TextBox>
        <Button Background="Beige" HorizontalAlignment="Center" Click="button_Click"   FontSize="25"
            Name="button" Margin="10,10"   Width="130" Height="37">Enter</Button>
        <TextBlock HorizontalAlignment="Center" Foreground="BlueViolet"  FontSize="23" Height="38" Width="390" Margin="10,10" x:Name="Result"></TextBlock>


    </StackPanel>


</Window>
